{
    "name": "movie",
    "title": "Movie",
    "elasticsearchIndex": "movies",
    "columns":["title", "release_year", "country", "languages", "budget_usd", "gross_usd", "rotten_tomatoes_score"],
    "sort":"release_year,desc;title",
    "detailHtmlTemplate":[
      "<!doctype html><html><head><meta charset=\"utf-8\"><meta name=\"viewport\" content=\"width=device-width, initial-scale=1\"><base target=\\\"_blank\\\"><title>{title:unlabeled}</title><style>body{{margin:0;padding:8px;font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,Noto Sans,Helvetica Neue,Arial\"Apple Color Emoji\",\"Segoe UI Emoji\";font-size:14px;line-height:1.4;color:#111}}.field-name{{font-weight:600}}.field{{margin-bottom:0.7em}}</style></head><body><b>{title:unlabeled} ({release_year:unlabeled:date-yyyy:default-unknown date})</b> {languages:unlabeled} {runtime_minutes:label-Runtime}{languages,unlabeled}{rotten_tomatoes_score:label-Rotten Tomatos}",
      "{directors}{producers}{writers}",
      "{cast}",
      "{genres}{country}",
      "{budget_usd:label-Budget}{gross_usd:label-Gross}",
      "{summary:ifDifferentFrom-synopsis}",
      "{synopsis}"
    ],
    "fields": {
      "title": {
        "name": "Title",
        "type": "string",
        "width": "350px",
        "operators": ["=", "!=", "contains", "!contains", "like", "!like", "in", "!in", "exists"],
        "annotations": [
          {
            "type": "pill",
            "field": "categories",
            "ruleType": "regex",
            "rules": [
              { "^important$": "I" },
              { "\\bfive star\\b": "*" },
              { "ignore": "-" },
              { "\\*": "star"}
            ],
            "tooltip": "categories.join(', ')"
          }
        ]
      },
      "release_year": {
        "name": "Release Year",
        "type": "number",
        "column": "Year",
        "operators": ["=", "!=", ">", ">=", "<", "<=", "in", "!in", "exists"]
      },
      "genres": {
        "name": "Genres",
        "type": "string",
        "operators": ["contains", "!contains", "in", "!in", "exists"]
      },
      "country": {
        "name": "Country",
        "type": "string",
        "operators": ["=", "!=", "in", "!in", "exists"],
        "hasCiKeyword": true
      },
      "languages": {
        "name": "Language",
        "type": "string",
        "operators": ["=", "!=", "in", "!in", "exists"]
      },
      "directors": {
        "name": "Director",
        "type": "string",
        "operators": ["contains", "!contains", "in", "!in", "exists"]
      },
      "producers": {
        "name": "Producer",
        "type": "string",
        "operators": ["contains", "!contains", "in", "!in", "exists"]
      },
      "writers": {
        "name": "Producer",
        "type": "string",
        "operators": ["contains", "!contains", "in", "!in", "exists"]
      },
      "cast": {
        "name": "Cast",
        "type": "string",
        "operators": ["contains", "!contains", "in", "!in", "exists"]
      },
      "budget_usd": {
        "name": "Budget",
        "type": "number",
        "operators": ["=", "!=", ">", ">=", "<", "<=", "in", "!in", "exists"]
      },
      "gross_usd": {
        "name": "Gross",
        "type": "number",
        "operators": ["=", "!=", ">", ">=", "<", "<=", "in", "!in", "exists"]
      },
      "rotten_tomatoes_score": {
        "name": "Rotten Tomatoes Score",
        "column": "Score",
        "type": "number",
        "operators": ["=", "!=", ">", ">=", "<", "<=", "in", "!in", "exists"],
        "annotations": [
          {
            "type": "pill",
            "field": "rotten_tomatoes_score",
            "ruleType": "compare",
            "rules": [
              { ">=,85": "+" },
              { "<=,30": "-" }
            ]
          }
        ]
      }
    },
    "views": [
        {
          "id": "directors",
          "name": "Directors",
          "field": "directors",
          "aggregation": "directors.keyword",
          "query": "directors:*",
          "categoryQuery": "",
          "script": "",
          "entity": "movie"
        },
        {
          "id": "producers",
          "name": "Producers",
          "field": "producers",
          "aggregation": "producers.keyword",
          "query": "producers:*",
